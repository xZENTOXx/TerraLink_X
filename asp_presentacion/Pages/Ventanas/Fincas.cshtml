@page
@model asp_presentacion.Pages.Ventanas.FincasModel
@{
    ViewData["Titulo"] = "Gestión de Fincas";
}

<!-- CONTENEDOR PRINCIPAL -->
<div class="containers_vn">

    <form method="POST" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <!-- =======================
             HEADER + BOTONES SUPERIORES
           ======================= -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="m-0">Fincas</h3>

            <div class="btn-group">
                <input type="submit" value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit" value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-primary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit" value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-primary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit" value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>
        </div>

        <!-- Ocultos generales -->
        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)
        {
            <input type="hidden" asp-for="@Model.Actual!.Id" />
        }

        <!-- Ocultos específicos para borrar -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.Nombre" />
            <input type="hidden" asp-for="@Model.Actual!.Ubicacion" />
            <input type="hidden" asp-for="@Model.Actual!.Capacidad" />
            <input type="hidden" asp-for="@Model.Actual!.Descripcion" />
            <input type="hidden" asp-for="@Model.Actual!.PrecioBase" />
        }

        <!-- ============================================
             FORMULARIO DE EDICIÓN / CREACIÓN
           ============================================ -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="containers_em mt-3">

                <h4 class="mb-3">Información de la Finca</h4>

                <div class="row g-3">

                    <div class="col-md-6">
                        <label>Nombre</label>
                        <input class="form-control" asp-for="@Model.Actual!.Nombre" />
                    </div>

                    <div class="col-md-6">
                        <label>Ubicación</label>
                        <input class="form-control" asp-for="@Model.Actual!.Ubicacion" />
                    </div>

                    <div class="col-md-4">
                        <label>Capacidad</label>
                        <input type="number" class="form-control" asp-for="@Model.Actual!.Capacidad" />
                    </div>

                    <div class="col-md-8">
                        <label>Descripción</label>
                        <input class="form-control" asp-for="@Model.Actual!.Descripcion" />
                    </div>

                    <div class="col-md-6">
                        <label>Precio Base</label>
                        <input type="number" class="form-control" asp-for="@Model.Actual!.PrecioBase" />
                    </div>
                </div>

            </div>
        }

        <!-- ============================================
             POPUP MENSAJE / VALIDACIONES
           ============================================ -->
        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
        }

        <!-- ============================================
             POPUP DE BORRADO
           ============================================ -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class='popup'>
                <div class='pp_del_inner'>
                    <h3 class="text-start">Eliminar Finca</h3>

                    <p class="mt-3 text-start">
                        ¿Confirmas eliminar esta finca?
                    </p>

                    <h5 class="text-start">@Model.Actual!.Nombre</h5>

                    <div class="mt-4 text-center">
                        <input type="submit" value="Borrar"
                               asp-page-handler="BtBorrar"
                               class="btn btn-danger me-2" />

                        <input type="submit" value="Cancelar"
                               asp-page-handler="BtCancelar"
                               class="btn btn-secondary" />
                    </div>
                </div>
            </div>
        }

        <!-- ============================================
             FILTRO + LISTADO
           ============================================ -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <!-- Filtro -->
            <div class="mt-3 mb-2">
                <input class="form-control"
                       asp-for="@Model.Filtro!.Ubicacion"
                       placeholder="Filtrar por ubicación..." />
            </div>

            <!-- Tabla -->
            <div class="containers_em mt-3">
                <table class="tb_data">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th class="cl_hidden">Ubicación</th>
                            <th>Capacidad</th>
                            <th>Descripción</th>
                            <th>Precio Base</th>
                            <th class="cl_actions">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>@elemento.Nombre</td>
                                    <td class="cl_hidden">@elemento.Ubicacion</td>
                                    <td>@elemento.Capacidad</td>
                                    <td>@elemento.Descripcion</td>
                                    <td>$ @elemento.PrecioBase</td>

                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               asp-route-data="@elemento.Id"
                                               class="btn btn-light btn-sm" />

                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               asp-route-data="@elemento.Id"
                                               class="btn btn-danger btn-sm ms-1" />
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
    </form>

</div>
