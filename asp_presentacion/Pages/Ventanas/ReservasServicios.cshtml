@page
@model asp_presentacion.Pages.Ventanas.ReservaServiciosModel
@{
    ViewData["Titulo"] = "Reserva – Servicios Extras";
}

<div class="containers_vn">

    <form method="POST" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <!-- =====================================================
             TÍTULO + BOTONES
             ===================================================== -->
        <div class="d-flex justify-content-between align-items-center mb-3">

            <h3 class="m-0">Reserva – Servicios Extras</h3>

            <div class="btn-group">

                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-primary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-primary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

            </div>
        </div>

        <!-- =====================================================
             CAMPOS OCULTOS
             ===================================================== -->
        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)
        {
            <input type="hidden" asp-for="@Model.Actual!.Id" />
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.Reserva" />
            <input type="hidden" asp-for="@Model.Actual!.Servicio" />
            <input type="hidden" asp-for="@Model.Actual!.Cantidad" />
        }

        <!-- =====================================================
             FORMULARIO EDITAR / NUEVO
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="containers_em mt-3">

                <h4 class="mb-3">Servicio Asociado a Reserva</h4>

                <div class="row g-3">

                    <!-- Reserva -->
                    <div class="col-md-6">
                        <label>Reserva (ID)</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.Reserva" />
                    </div>

                    <!-- Servicio -->
                    <div class="col-md-6">
                        <label>Servicio Extra (ID)</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.Servicio" />
                    </div>

                    <!-- Cantidad -->
                    <div class="col-md-6">
                        <label>Cantidad</label>
                        <input type="number"
                               min="1"
                               class="form-control"
                               asp-for="@Model.Actual!.Cantidad" />
                    </div>

                </div>

            </div>
        }

        <!-- =====================================================
             MENSAJES EMERGENTES
             ===================================================== -->
        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
        }

        <!-- =====================================================
             POPUP BORRAR
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="popup">
                <div class="pp_del_inner">

                    <h3 class="text-start">Eliminar Servicio Asociado</h3>

                    <p class="text-start mt-3">¿Desea borrar este registro?</p>

                    <h5 class="text-start">
                        Servicio: @Model.Actual!._Servicio?.Nombre
                    </h5>

                    <h6 class="text-start">
                        Reserva: @Model.Actual!._Reserva?.Id
                    </h6>

                    <div class="mt-4 text-center">
                        <input type="submit"
                               value="Borrar"
                               asp-page-handler="BtBorrar"
                               class="btn btn-danger me-2" />

                        <input type="submit"
                               value="Cancelar"
                               asp-page-handler="BtCancelar"
                               class="btn btn-secondary" />
                    </div>

                </div>
            </div>
        }

        <!-- =====================================================
             LISTADO + FILTRO
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="row g-2 mb-3">

                <div class="col-md-6">
                    <label>Filtrar por Servicio (ID)</label>
                    <input class="form-control"
                           asp-for="@Model.Filtro!.Servicio"
                           placeholder="ID de servicio extra..." />
                </div>

            </div>

            <!-- TABLA -->
            <div class="containers_em">

                <table class="tb_data">

                    <thead>
                        <tr>
                            <th>Reserva</th>
                            <th>Cliente</th>
                            <th>Servicio</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th class="cl_actions">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.Lista != null)
                        {
                            foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>@elemento._Reserva?.Id</td>

                                    <td>
                                        @($"{elemento._Reserva?._Cliente?.Nombre} {elemento._Reserva?._Cliente?.Apellido}")
                                    </td>

                                    <td>@elemento._Servicio?.Nombre</td>

                                    <td>
                                        $@($"{elemento._Servicio?.Precio}")
                                    </td>

                                    <td>@elemento.Cantidad</td>

                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               asp-route-data="@elemento.Id"
                                               class="btn btn-light btn-sm" />

                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               asp-route-data="@elemento.Id"
                                               class="btn btn-danger btn-sm ms-1" />
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>

            </div>
        }

    </form>

</div>
