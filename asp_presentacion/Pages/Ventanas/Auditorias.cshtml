@page
@model asp_presentacion.Pages.Ventanas.AuditoriasModel
@{
    ViewData["Titulo"] = "Auditorías";
}

<div class="containers_vn">

    <form method="POST">
        @Html.AntiForgeryToken()

        <!-- TÍTULO + REFRESCAR -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="m-0">Auditorías del Sistema</h3>

            <input type="submit"
                   value="Refrescar"
                   asp-page-handler="BtRefrescar"
                   class="btn btn-primary"
                   disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
        </div>

        <!-- FILTRO (SOLO FECHA) -->
        <div class="containers_em mb-3">
            <h5 class="mb-3">Filtro</h5>

            <div class="row g-3">
                <div class="col-md-4">
                    <label>Fecha</label>
                    <input type="date"
                           class="form-control"
                           asp-for="FiltroFecha" />
                </div>
            </div>
        </div>

        <!-- TABLA -->
        <div class="containers_em">
            <table class="tb_data">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Acción</th>
                        <th>Tabla</th>
                        <th>ID Registro</th>
                        <th>Fecha</th>
                    </tr>
                </thead>

                <tbody>
                    @* 
                       Se recorre Model.Lista de forma segura:
                       - Si Model.Lista NO es null, se usa esa lista.
                       - Si Model.Lista es null, se usa Enumerable.Empty<Entidad>(), 
                         que devuelve una lista vacía del tipo indicado.
                       Así evitamos errores por null (NullReferenceException) 
                       y el foreach siempre tiene algo que iterar, aunque sea una colección vacía.
                    *@
                    @foreach (var a in Model.Lista ?? Enumerable.Empty<lib_dominio.Entidades.Auditorias>())
                    {
                        <tr>
                            <td>@a.Id</td>
                            <td>@a.Usuario</td>
                            <td>@a.Accion</td>
                            <td>@a.TablaAfectada</td>
                            <td>@a.IdRegistroAfectado</td>
                            <td>@a.Fecha.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

    </form>

</div>
