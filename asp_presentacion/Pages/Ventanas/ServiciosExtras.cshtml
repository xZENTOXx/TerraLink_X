@page
@model asp_presentacion.Pages.Ventanas.ServiciosExtrasModel
@{
    ViewData["Titulo"] = "Servicios Extras";
}

<div class="containers_vn">

    <form method="POST" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <!-- =====================================================
             TÍTULO + BOTONES PRINCIPALES
             ===================================================== -->
        <div class="d-flex justify-content-between align-items-center mb-3">

            <h3 class="m-0">Servicios Extras</h3>

            <div class="btn-group">

                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-primary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-primary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

            </div>
        </div>

        <!-- =====================================================
             CAMPOS OCULTOS NECESARIOS
             ===================================================== -->
        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)
        {
            <input type="hidden" asp-for="@Model.Actual!.Id" />
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.Nombre" />
            <input type="hidden" asp-for="@Model.Actual!.Precio" />
            <input type="hidden" asp-for="@Model.Actual!.Estado" />
        }

        <!-- =====================================================
             FORMULARIO EDITAR / NUEVO
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="containers_em mt-3">

                <h4 class="mb-3">Servicio Extra</h4>

                <div class="row g-3">

                    <!-- Nombre -->
                    <div class="col-md-6">
                        <label>Nombre</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.Nombre" />
                    </div>

                    <!-- Precio -->
                    <div class="col-md-6">
                        <label>Precio</label>
                        <input type="number"
                               step="0.01"
                               min="0"
                               class="form-control"
                               asp-for="@Model.Actual!.Precio" />
                    </div>

                    <!-- Estado -->
                    <div class="col-md-6">
                        <label>Estado</label>
                        <select class="form-control" asp-for="@Model.Actual!.Estado">
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                    </div>

                </div>
            </div>
        }

        <!-- =====================================================
             MENSAJE EMERGENTE
             ===================================================== -->
        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
        }

        <!-- =====================================================
             POPUP BORRAR
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="popup">
                <div class="pp_del_inner">

                    <h3 class="text-start">Eliminar Servicio Extra</h3>

                    <p class="text-start mt-3">¿Desea borrar este servicio?</p>

                    <h5 class="text-start">
                        @Model.Actual!.Nombre
                    </h5>

                    <div class="mt-4 text-center">
                        <input type="submit"
                               value="Borrar"
                               asp-page-handler="BtBorrar"
                               class="btn btn-danger me-2" />

                        <input type="submit"
                               value="Cancelar"
                               asp-page-handler="BtCancelar"
                               class="btn btn-secondary" />
                    </div>

                </div>
            </div>
        }

        <!-- =====================================================
             LISTADO + BUSCADOR
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <!-- Filtro -->
            <div class="row g-2 mb-3">
                <div class="col-md-6">
                    <input class="form-control"
                           asp-for="@Model.Filtro!.Nombre"
                           placeholder="Buscar por nombre..." />
                </div>
            </div>

            <!-- TABLA -->
            <div class="containers_em">

                <table class="tb_data">

                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Estado</th>
                            <th class="cl_actions">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.Lista != null)
                        {
                            foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>@elemento.Nombre</td>
                                    <td>$@elemento.Precio</td>
                                    <td>@(elemento.Estado ? "Activo" : "Inactivo")</td>

                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               asp-route-data="@elemento.Id"
                                               class="btn btn-light btn-sm" />

                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               asp-route-data="@elemento.Id"
                                               class="btn btn-danger btn-sm ms-1" />
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>

            </div>
        }

    </form>

</div>
