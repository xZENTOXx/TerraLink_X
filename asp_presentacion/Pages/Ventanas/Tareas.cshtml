@page
@model asp_presentacion.Pages.Ventanas.TareasModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Tareas</h3>
            </div>

            <div align="left" class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @* Campo oculto para ID *@
            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Id" />
            }

            @* Ocultos al borrar *@
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Empleado" />
                <input type="hidden" asp-for="@Model.Actual!.Finca" />
                <input type="hidden" asp-for="@Model.Actual!.Descripcion" />
                <input type="hidden" asp-for="@Model.Actual!.FechaAsignacion" />
                <input type="hidden" asp-for="@Model.Actual!.Estado" />
            }

            @* FORMULARIO NUEVO / EDITAR *@
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Asignación de Tarea</h3>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Empleado (ID)</label>
                        <div class="col-lg-6">
                            <input class="cts_forms form-control"
                                   asp-for="@Model.Actual!.Empleado" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Finca (ID)</label>
                        <div class="col-lg-6">
                            <input class="cts_forms form-control"
                                   asp-for="@Model.Actual!.Finca" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Descripción</label>
                        <div class="col-lg-6">
                            <input class="cts_forms form-control"
                                   asp-for="@Model.Actual!.Descripcion" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Fecha Asignación</label>
                        <div class="col-lg-6">
                            <input type="date"
                                   class="cts_forms form-control"
                                   asp-for="@Model.Actual!.FechaAsignacion" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Estado</label>
                        <div class="col-lg-6">
                            <select class="cts_forms form-control"
                                    asp-for="@Model.Actual!.Estado">
                                <option value="Pendiente">Pendiente</option>
                                <option value="En Progreso">En Progreso</option>
                                <option value="Finalizada">Finalizada</option>
                            </select>
                        </div>
                    </div>
                </div>
            }

            @* MENSAJE EMERGENTE *@
            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden" asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
            }

            @* POPUP BORRAR *@
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class="popup">
                    <div class="pp_del_inner">
                        <h2 align="left">¿Borrar Tarea?</h2>

                        <h4 align="left">
                            Empleado: @Model.Actual!._Empleado?.Nombre @Model.Actual!._Empleado?.Apellido
                        </h4>

                        <h4 align="left">
                            Finca: @Model.Actual!._Finca?.Nombre
                        </h4>

                        <br />

                        <input type="submit" value="Borrar"
                               asp-page-handler="BtBorrar"
                               class="btn btn-secondary" />

                        <input type="submit" value="Cerrar"
                               asp-page-handler="BtCancelar"
                               class="btn btn-secondary" />
                    </div>
                </div>
            }

            @* LISTADO *@
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <label>Filtrar por Empleado (ID):</label>
                <input class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Empleado"
                       placeholder="ID del empleado" />

                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>Empleado</th>
                            <th>Finca</th>
                            <th>Descripción</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                            <th class="cl_actions">Acciones</th>
                        </tr>

                        @if (Model.Lista != null)
                        {
                            foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @($"{elemento._Empleado?.Nombre} {elemento._Empleado?.Apellido}")
                                    </td>

                                    <td>@elemento._Finca?.Nombre</td>

                                    <td>@elemento.Descripcion</td>

                                    <td>@elemento.FechaAsignacion.ToShortDateString()</td>

                                    <td>@elemento.Estado</td>

                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />

                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>
