@page
@model asp_presentacion.Pages.Ventanas.TareasModel
@{
    ViewData["Titulo"] = "Tareas";
}

<div class="containers_vn">

    <form method="POST" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <!-- =====================================================
             TÍTULO + BOTONES SUPERIORES
             ===================================================== -->
        <div class="d-flex justify-content-between align-items-center mb-3">

            <h3 class="m-0">Tareas</h3>

            <div class="btn-group">

                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-primary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-primary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

            </div>

        </div>

        <!-- =====================================================
             CAMPOS OCULTOS
             ===================================================== -->
        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)
        {
            <input type="hidden" asp-for="@Model.Actual!.Id" />
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.Empleado" />
            <input type="hidden" asp-for="@Model.Actual!.Finca" />
            <input type="hidden" asp-for="@Model.Actual!.Descripcion" />
            <input type="hidden" asp-for="@Model.Actual!.FechaAsignacion" />
            <input type="hidden" asp-for="@Model.Actual!.Estado" />
        }

        <!-- =====================================================
             FORMULARIO NUEVO / EDITAR
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="containers_em">

                <h4 class="mb-3">Asignación de Tarea</h4>

                <div class="row g-3">

                    <div class="col-md-6">
                        <label>Empleado (ID)</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.Empleado" />
                    </div>

                    <div class="col-md-6">
                        <label>Finca (ID)</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.Finca" />
                    </div>

                    <div class="col-md-6">
                        <label>Descripción</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.Descripcion" />
                    </div>

                    <div class="col-md-6">
                        <label>Fecha Asignación</label>
                        <input type="date"
                               class="form-control"
                               asp-for="@Model.Actual!.FechaAsignacion" />
                    </div>

                    <div class="col-md-6">
                        <label>Estado</label>
                        <select class="form-control"
                                asp-for="@Model.Actual!.Estado">
                            <option value="Pendiente">Pendiente</option>
                            <option value="En Progreso">En Progreso</option>
                            <option value="Finalizada">Finalizada</option>
                        </select>
                    </div>

                </div>

            </div>
        }

        <!-- =====================================================
             MENSAJE POPUP
             ===================================================== -->
        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
        }

        <!-- =====================================================
             POPUP BORRAR
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="popup">
                <div class="pp_del_inner">

                    <h3 class="text-start">Eliminar Tarea</h3>

                    <p class="mt-3 text-start">¿Desea borrar esta tarea?</p>

                    <h5 class="text-start">
                        Empleado:
                        @Model.Actual!._Empleado?.Nombre
                        @Model.Actual!._Empleado?.Apellido
                    </h5>

                    <h5 class="text-start">
                        Finca:
                        @Model.Actual!._Finca?.Nombre
                    </h5>

                    <div class="mt-4 text-center">
                        <input type="submit"
                               value="Borrar"
                               class="btn btn-danger me-2"
                               asp-page-handler="BtBorrar" />

                        <input type="submit"
                               value="Cancelar"
                               class="btn btn-secondary"
                               asp-page-handler="BtCancelar" />
                    </div>

                </div>
            </div>
        }

        <!-- =====================================================
             LISTADO
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="row g-2 mb-3">

                <div class="col-md-4">
                    <label>Filtrar por Empleado (ID):</label>
                    <input class="form-control"
                           asp-for="@Model.Filtro!.Empleado"
                           placeholder="ID del empleado" />
                </div>

            </div>

            <div class="containers_em">

                <table class="tb_data">

                    <thead>
                        <tr>
                            <th>Empleado</th>
                            <th>Finca</th>
                            <th>Descripción</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                            <th class="cl_actions">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @* 
                       Se recorre Model.Lista de forma segura:
                       - Si Model.Lista NO es null, se usa esa lista.
                       - Si Model.Lista es null, se usa Enumerable.Empty<Entidad>(), 
                         que devuelve una lista vacía del tipo indicado.
                       Así evitamos errores por null (NullReferenceException) 
                       y el foreach siempre tiene algo que iterar, aunque sea una colección vacía.
                    *@
                        @foreach (var elemento in Model.Lista ?? Enumerable.Empty<lib_dominio.Entidades.Tareas>())
                        {
                            <tr>

                                <td>@($"{elemento._Empleado?.Nombre} {elemento._Empleado?.Apellido}")</td>

                                <td>@elemento._Finca?.Nombre</td>

                                <td>@elemento.Descripcion</td>

                                <td>@elemento.FechaAsignacion.ToShortDateString()</td>

                                <td>@elemento.Estado</td>

                                <td>

                                    <input type="submit"
                                           value="Modificar"
                                           class="btn btn-light btn-sm"
                                           asp-page-handler="BtModificar"
                                           asp-route-data="@elemento.Id" />

                                    <input type="submit"
                                           value="Borrar"
                                           class="btn btn-danger btn-sm ms-1"
                                           asp-page-handler="BtBorrarVal"
                                           asp-route-data="@elemento.Id" />

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>
        }

    </form>

</div>
