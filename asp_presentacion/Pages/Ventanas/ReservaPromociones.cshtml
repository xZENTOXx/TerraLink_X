@page
@model asp_presentacion.Pages.Ventanas.ReservaPromocionesModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Reserva – Promociones</h3>
            </div>

            <div align="left" class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Id" />
            }

            @* OCULTOS AL BORRAR *@
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Reserva" />
                <input type="hidden" asp-for="@Model.Actual!.Promocion" />
            }

            @* FORM DE EDITAR/NUEVO *@
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Asignar Promoción a Reserva</h3>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Reserva (ID)</label>
                        <div class="col-lg-6">
                            <input class="cts_forms form-control"
                                   asp-for="@Model.Actual!.Reserva" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Promoción (ID)</label>
                        <div class="col-lg-6">
                            <input class="cts_forms form-control"
                                   asp-for="@Model.Actual!.Promocion" />
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden" asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
            }

            @* POPUP BORRAR *@
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <h2 align="left">Mensaje</h2>
                        <h4 align="left">¿Desea borrar la relación?</h4>
                        <h6 align="left">Reserva ID: @Model.Actual!.Reserva – Promoción ID: @Model.Actual!.Promocion</h6>

                        <br /><br />

                        <input type="submit" value="Borrar"
                               asp-page-handler="BtBorrar"
                               class="btn btn-secondary" />

                        <input type="submit" value="Cerrar"
                               asp-page-handler="BtCancelar"
                               class="btn btn-secondary" />
                    </div>
                </div>
            }

            @* LISTADO *@
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <label>Filtrar por Promoción (ID):</label>
                <input class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Promocion"
                       placeholder="ID de la Promoción" />

                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>Reserva</th>
                            <th>Cliente</th>
                            <th>Promoción</th>
                            <th>Descuento</th>
                            <th class="cl_actions">Acciones</th>
                        </tr>

                        @if (Model.Lista != null)
                        {
                            foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>@elemento._Reserva?.Id</td>

                                    <td>
                                        @($"{elemento._Reserva?._Cliente?.Nombre} {elemento._Reserva?._Cliente?.Apellido}")
                                    </td>

                                    <td>@elemento._Promocion?.Nombre</td>
                                    <td>@($"{elemento._Promocion?.Descuento} %")</td>

                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />

                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>
