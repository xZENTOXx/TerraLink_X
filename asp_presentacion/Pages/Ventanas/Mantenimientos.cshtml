@page
@model asp_presentacion.Pages.Ventanas.MantenimientosModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Mantenimientos</h3>
            </div>

            <div align="left" class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @* Hidden Id *@
            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Id" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Descripcion" />
                <input type="hidden" asp-for="@Model.Actual!.Costo" />
                <input type="hidden" asp-for="@Model.Actual!.Fecha" />
                <input type="hidden" asp-for="@Model.Actual!.Responsable" />
                <input type="hidden" asp-for="@Model.Actual!.Finca" />
            }

            @* FORM EDIT/CREATE *@
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Mantenimiento</h3>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Finca</label>
                        <div class="col-lg-6">
                            <select asp-for="@Model.Actual!.Finca" class="cts_forms form-control">
                                <option value="">Seleccione una finca</option>
                                @foreach (var finca in Model.ListaFincas!)
                                {
                                    <option value="@finca.Id">@finca.Nombre</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Descripción</label>
                        <div class="col-lg-6">
                            <input class="cts_forms form-control" asp-for="@Model.Actual!.Descripcion" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Costo</label>
                        <div class="col-lg-6">
                            <input class="cts_forms form-control" asp-for="@Model.Actual!.Costo" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Fecha</label>
                        <div class="col-lg-6">
                            <input class="cts_forms form-control" type="date"
                                   asp-for="@Model.Actual!.Fecha" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">Responsable</label>
                        <div class="col-lg-6">
                            <input class="cts_forms form-control" asp-for="@Model.Actual!.Responsable" />
                        </div>
                    </div>
                </div>
            }

            @* MENSAJES *@
            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden" asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
            }

            @* POPUP BORRAR *@
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <h2 align="left">Mensaje</h2>
                        <h4 align="left">¿Desea borrar este mantenimiento?</h4>
                        <h6 align="left">@Model.Actual!.Descripcion</h6>

                        <br /><br />

                        <input type="submit" value="Borrar"
                               asp-page-handler="BtBorrar"
                               class="btn btn-secondary" />

                        <input type="submit" value="Cerrar"
                               asp-page-handler="BtCancelar"
                               class="btn btn-secondary" />
                    </div>
                </div>
            }

            @* LISTADO *@
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <label>Finca:</label>
                <select asp-for="@Model.Filtro!.Finca" class="cts_forms form-control">
                    <option value="">Todas</option>
                    @foreach (var finca in Model.ListaFincas!)
                    {
                        <option value="@finca.Id">@finca.Nombre</option>
                    }
                </select>

                <label>Responsable:</label>
                <input class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Responsable"
                       placeholder="Buscar por Responsable" />

                <label>Fecha:</label>
                <input class="cts_forms form-control" type="date"
                       asp-for="@Model.Filtro!.Fecha" />

                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>Finca</th>
                            <th>Descripción</th>
                            <th>Costo</th>
                            <th>Fecha</th>
                            <th>Responsable</th>
                            <th class="cl_actions">Acciones</th>
                        </tr>

                        @if (Model.Lista != null)
                        {
                            foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>@elemento._Finca?.Nombre</td>
                                    <td>@elemento.Descripcion</td>
                                    <td>@elemento.Costo</td>
                                    <td>@elemento.Fecha.ToShortDateString()</td>
                                    <td>@elemento.Responsable</td>

                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />

                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>
