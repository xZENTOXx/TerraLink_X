@page
@model asp_presentacion.Pages.Ventanas.UsuariosModel
@{
    ViewData["Titulo"] = "Usuarios";
}

<div class="containers_vn">

    <form method="POST" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <!-- =====================================================
             TÍTULO + BOTONES
             ===================================================== -->
        <div class="d-flex justify-content-between align-items-center mb-3">

            <h3 class="m-0">Usuarios</h3>

            <div class="btn-group">

                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-primary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-primary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

            </div>

        </div>

        <!-- =====================================================
             CAMPOS OCULTOS
             ===================================================== -->
        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)
        {
            <input type="hidden" asp-for="@Model.Actual!.Id" />
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.NombreUsuario" />
            <input type="hidden" asp-for="@Model.Actual!.Clave" />
            <input type="hidden" asp-for="@Model.Actual!.Rol" />
        }

        <!-- =====================================================
             FORMULARIO EDITAR / NUEVO
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="containers_em">

                <h4 class="mb-3">Datos del Usuario</h4>

                <div class="row g-4">

                    <div class="col-md-6">
                        <label>Nombre de Usuario</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.NombreUsuario" />
                    </div>

                    <div class="col-md-6">
                        <label>Clave</label>
                        <input type="password"
                               class="form-control"
                               asp-for="@Model.Actual!.Clave" />
                    </div>

                    <div class="col-md-6">
                        <label>Rol</label>
                        <select class="form-control" asp-for="@Model.Actual!.Rol">
                            <option value="Admin">Admin</option>
                            <option value="Recepcion">Recepción</option>
                            <option value="Comercial">Comercial</option>
                            <option value="Mantenimiento">Mantenimiento</option>
                            <option value="Auditor">Auditor</option>
                        </select>
                    </div>

                </div>

            </div>
        }

        <!-- =====================================================
             MENSAJE EMERGENTE
             ===================================================== -->
        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
        }

        <!-- =====================================================
             POPUP BORRAR
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="popup">
                <div class="pp_del_inner">

                    <h3 class="text-start">Eliminar Usuario</h3>

                    <p class="text-start mt-2">
                        ¿Desea borrar este usuario?
                    </p>

                    <h5 class="text-start">@Model.Actual!.NombreUsuario</h5>

                    <div class="mt-4 text-center">

                        <input type="submit"
                               value="Borrar"
                               asp-page-handler="BtBorrar"
                               class="btn btn-danger me-2" />

                        <input type="submit"
                               value="Cancelar"
                               asp-page-handler="BtCancelar"
                               class="btn btn-secondary" />

                    </div>

                </div>
            </div>
        }

        <!-- =====================================================
             LISTADO
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="row g-2 mb-3">
                <div class="col-md-4">
                    <label>Buscar por Usuario</label>
                    <input class="form-control"
                           asp-for="@Model.Filtro!.NombreUsuario"
                           placeholder="Nombre de usuario" />
                </div>
            </div>

            <div class="containers_em">

                <table class="tb_data">

                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Rol</th>
                            <th class="cl_actions">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @* 
                       Se recorre Model.Lista de forma segura:
                       - Si Model.Lista NO es null, se usa esa lista.
                       - Si Model.Lista es null, se usa Enumerable.Empty<Entidad>(), 
                         que devuelve una lista vacía del tipo indicado.
                       Así evitamos errores por null (NullReferenceException) 
                       y el foreach siempre tiene algo que iterar, aunque sea una colección vacía.
                    *@
                        @foreach (var elemento in Model.Lista ?? Enumerable.Empty<lib_dominio.Entidades.Usuarios>())
                        {
                            <tr>

                                <td>@elemento.NombreUsuario</td>
                                <td>@elemento.Rol</td>

                                <td>

                                    <input type="submit"
                                           value="Modificar"
                                           class="btn btn-light btn-sm"
                                           asp-page-handler="BtModificar"
                                           asp-route-data="@elemento.Id" />

                                    <input type="submit"
                                           value="Borrar"
                                           class="btn btn-danger btn-sm ms-1"
                                           asp-page-handler="BtBorrarVal"
                                           asp-route-data="@elemento.Id" />

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>
        }

    </form>

</div>
