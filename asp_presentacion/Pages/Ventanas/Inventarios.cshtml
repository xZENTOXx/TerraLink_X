@page
@model asp_presentacion.Pages.Ventanas.InventariosModel
@{
    ViewData["Titulo"] = "Inventarios";
}

<div class="containers_vn">

    <form method="POST" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <!-- =====================================================
             TÍTULO + BOTONES
             ===================================================== -->
        <div class="d-flex justify-content-between align-items-center mb-3">

            <h3 class="m-0">Inventarios</h3>

            <div class="btn-group">

                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-primary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-primary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

            </div>

        </div>

        <!-- ID OCULTO -->
        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)
        {
            <input type="hidden" asp-for="@Model.Actual!.Id" />
        }

        <!-- CAMPOS OCULTOS PARA BORRAR -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.Nombre" />
            <input type="hidden" asp-for="@Model.Actual!.Cantidad" />
            <input type="hidden" asp-for="@Model.Actual!.Estado" />
            <input type="hidden" asp-for="@Model.Actual!.Finca" />
        }

        <!-- =====================================================
             FORMULARIO EDITAR / NUEVO
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="containers_em mt-3">

                <h4 class="mb-3">Inventario</h4>

                <div class="row g-3">

                    <div class="col-md-6">
                        <label>Finca</label>
                        <select asp-for="@Model.Actual!.Finca" class="form-control">
                            <option value="">Seleccione una finca</option>
                            @foreach (var finca in Model.ListaFincas!)
                            {
                                <option value="@finca.Id">@finca.Nombre</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label>Nombre</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.Nombre" />
                    </div>

                    <div class="col-md-6">
                        <label>Cantidad</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.Cantidad" />
                    </div>

                    <div class="col-md-6">
                        <label>Estado</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.Estado" />
                    </div>

                </div>

            </div>
        }

        <!-- =====================================================
             MENSAJES
             ===================================================== -->
        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
        }

        <!-- =====================================================
             POPUP BORRAR
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="popup">
                <div class="pp_del_inner">

                    <h3 class="text-start">Eliminar Inventario</h3>

                    <p class="mt-3 text-start">¿Desea borrar este elemento?</p>

                    <h5 class="text-start">
                        @Model.Actual!.Nombre
                    </h5>

                    <div class="mt-4 text-center">
                        <input type="submit"
                               value="Borrar"
                               class="btn btn-danger me-2"
                               asp-page-handler="BtBorrar" />

                        <input type="submit"
                               value="Cancelar"
                               class="btn btn-secondary"
                               asp-page-handler="BtCancelar" />
                    </div>

                </div>
            </div>
        }

        <!-- =====================================================
             LISTADO
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="row g-2 mb-3">

                <div class="col-md-6">
                    <label>Filtrar por Finca:</label>
                    <select asp-for="@Model.Filtro!.Finca" class="form-control">
                        <option value="">Todas</option>
                        @foreach (var finca in Model.ListaFincas!)
                        {
                            <option value="@finca.Id">@finca.Nombre</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label>Filtrar por Nombre:</label>
                    <input class="form-control"
                           asp-for="@Model.Filtro!.Nombre"
                           placeholder="Buscar por nombre..." />
                </div>

            </div>

            <div class="containers_em">

                <table class="tb_data">

                    <thead>
                        <tr>
                            <th>Finca</th>
                            <th>Nombre</th>
                            <th>Cantidad</th>
                            <th>Estado</th>
                            <th class="cl_actions">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @* 
                       Se recorre Model.Lista de forma segura:
                       - Si Model.Lista NO es null, se usa esa lista.
                       - Si Model.Lista es null, se usa Enumerable.Empty<Entidad>(), 
                         que devuelve una lista vacía del tipo indicado.
                       Así evitamos errores por null (NullReferenceException) 
                       y el foreach siempre tiene algo que iterar, aunque sea una colección vacía.
                    *@
                        @foreach (var elemento in Model.Lista ?? Enumerable.Empty<lib_dominio.Entidades.Inventarios>())
                        {
                            <tr>
                                <td>@elemento._Finca?.Nombre</td>
                                <td>@elemento.Nombre</td>
                                <td>@elemento.Cantidad</td>
                                <td>@elemento.Estado</td>

                                <td>
                                    <input type="submit"
                                           value="Modificar"
                                           class="btn btn-light btn-sm"
                                           asp-page-handler="BtModificar"
                                           asp-route-data="@elemento.Id" />

                                    <input type="submit"
                                           value="Borrar"
                                           class="btn btn-danger btn-sm ms-1"
                                           asp-page-handler="BtBorrarVal"
                                           asp-route-data="@elemento.Id" />
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>

            </div>
        }

    </form>

</div>
