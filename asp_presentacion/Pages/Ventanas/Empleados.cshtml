@page
@model asp_presentacion.Pages.Ventanas.EmpleadosModel
@{
    ViewData["Titulo"] = "Gestión de Empleados";
}

<div class="containers_vn">

    <form method="POST" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <!-- ==================================================
             HEADER + BOTONES (ACCIONES SUPERIORES)
             ================================================== -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="m-0">Empleados</h3>

            <div class="btn-group">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-primary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-primary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>
        </div>

        <!-- ==================================================
             CAMPOS OCULTOS (ID Y DATOS PARA ELIMINACIÓN)
             ================================================== -->
        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)
        {
            <input type="hidden" asp-for="@Model.Actual!.Id" />
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.Nombre" />
            <input type="hidden" asp-for="@Model.Actual!.Apellido" />
            <input type="hidden" asp-for="@Model.Actual!.Cargo" />
            <input type="hidden" asp-for="@Model.Actual!.Telefono" />
            <input type="hidden" asp-for="@Model.Actual!.Correo" />
        }

        <!-- ==================================================
             FORMULARIO EDITAR / CREAR EMPLEADO
             ================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="containers_em mt-3">

                <h4 class="mb-3">Información del Empleado</h4>

                <div class="row g-3">

                    <div class="col-md-6">
                        <label>Nombre</label>
                        <input class="form-control" asp-for="@Model.Actual!.Nombre" />
                    </div>

                    <div class="col-md-6">
                        <label>Apellido</label>
                        <input class="form-control" asp-for="@Model.Actual!.Apellido" />
                    </div>

                    <div class="col-md-6">
                        <label>Cargo</label>
                        <input class="form-control" asp-for="@Model.Actual!.Cargo" />
                    </div>

                    <div class="col-md-6">
                        <label>Teléfono</label>
                        <input class="form-control" asp-for="@Model.Actual!.Telefono" />
                    </div>

                    <div class="col-md-6">
                        <label>Correo</label>
                        <input class="form-control" asp-for="@Model.Actual!.Correo" />
                    </div>

                </div>
            </div>
        }

        <!-- ==================================================
             MENSAJE EMERGENTE
             ================================================== -->
        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
        }

        <!-- ==================================================
             POPUP DE CONFIRMACIÓN DE BORRADO
             ================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class='popup'>
                <div class='pp_del_inner'>

                    <h3 class="text-start">Eliminar Empleado</h3>

                    <p class="mt-3 text-start">¿Confirmas eliminar este empleado?</p>

                    <h5 class="text-start">@Model.Actual!.Nombre @Model.Actual!.Apellido</h5>

                    <div class="mt-4 text-center">
                        <input type="submit" value="Borrar"
                               asp-page-handler="BtBorrar"
                               class="btn btn-danger me-2" />

                        <input type="submit" value="Cancelar"
                               asp-page-handler="BtCancelar"
                               class="btn btn-secondary" />
                    </div>

                </div>
            </div>
        }

        <!-- ==================================================
             LISTADO + FILTROS
             ================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <!-- FILTROS -->
            <div class="row g-2 mb-2">

                <div class="col-md-6">
                    <input class="form-control"
                           asp-for="@Model.Filtro!.Cargo"
                           placeholder="Buscar por cargo..." />
                </div>

                <div class="col-md-6">
                    <input class="form-control"
                           asp-for="@Model.Filtro!.Telefono"
                           placeholder="Buscar por teléfono..." />
                </div>

            </div>

            <!-- TABLA -->
            <div class="containers_em mt-2">
                <table class="tb_data">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Cargo</th>
                            <th>Teléfono</th>
                            <th>Correo</th>
                            <th class="cl_actions">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.Lista != null)
                        {
                            foreach (var elemento in Model.Lista!)
                            {
                                <tr>
                                    <td>@(elemento?.Nombre ?? "")</td>
                                    <td>@(elemento?.Apellido ?? "")</td>
                                    <td>@(elemento?.Cargo ?? "")</td>
                                    <td>@(elemento?.Telefono ?? "")</td>
                                    <td>@(elemento?.Correo ?? "")</td>

                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               asp-route-data="@(elemento?.Id)"
                                               class="btn btn-light btn-sm" />

                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               asp-route-data="@(elemento?.Id)"
                                               class="btn btn-danger btn-sm ms-1" />
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>


                </table>
            </div>
        }

    </form>

</div>
