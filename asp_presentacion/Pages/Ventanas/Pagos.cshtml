@page
@model asp_presentacion.Pages.Ventanas.PagosModel
@{
    ViewData["Titulo"] = "Pagos";
}

<div class="containers_vn">

    <form method="POST" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <!-- =====================================================
             TÍTULO + BOTONES
             ===================================================== -->
        <div class="d-flex justify-content-between align-items-center mb-3">

            <h3 class="m-0">Pagos</h3>

            <div class="btn-group">

                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-primary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-primary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

            </div>

        </div>

        <!-- =====================================================
             CAMPOS OCULTOS
             ===================================================== -->
        @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)
        {
            <input type="hidden" asp-for="@Model.Actual!.Id" />
        }

        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <input type="hidden" asp-for="@Model.Actual!.Reserva" />
            <input type="hidden" asp-for="@Model.Actual!.Monto" />
            <input type="hidden" asp-for="@Model.Actual!.FechadePago" />
            <input type="hidden" asp-for="@Model.Actual!.Metodo" />
        }

        <!-- =====================================================
             FORMULARIO NUEVO / EDITAR
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
        {
            <div class="containers_em">

                <h4 class="mb-3">Registrar Pago</h4>

                <div class="row g-4">

                    <div class="col-md-6">
                        <label>Reserva (ID)</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.Reserva" />
                    </div>

                    <div class="col-md-6">
                        <label>Monto</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.Monto" />
                    </div>

                    <div class="col-md-6">
                        <label>Fecha de Pago</label>
                        <input type="date"
                               class="form-control"
                               asp-for="@Model.Actual!.FechadePago" />
                    </div>

                    <div class="col-md-6">
                        <label>Método</label>
                        <input class="form-control"
                               asp-for="@Model.Actual!.Metodo" />
                    </div>

                </div>

            </div>
        }

        <!-- =====================================================
             MENSAJES POPUP
             ===================================================== -->
        @if (ViewData.ContainsKey("Mensaje"))
        {
            <input type="hidden" asp-for="@Model.Accion" />
            @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
        }

        <!-- =====================================================
             POPUP BORRAR
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="popup">
                <div class="pp_del_inner">

                    <h3 class="text-start">Eliminar Pago</h3>

                    <p class="text-start mt-3">¿Desea borrar este pago?</p>

                    <h5 class="text-start">Monto: @Model.Actual!.Monto</h5>

                    <div class="mt-4 text-center">

                        <input type="submit"
                               value="Borrar"
                               asp-page-handler="BtBorrar"
                               class="btn btn-danger me-2" />

                        <input type="submit"
                               value="Cancelar"
                               asp-page-handler="BtCancelar"
                               class="btn btn-secondary" />

                    </div>
                </div>
            </div>
        }

        <!-- =====================================================
             LISTADO
             ===================================================== -->
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
        {
            <div class="row g-2 mb-3">
                <div class="col-md-4">
                    <label>Fecha de Pago</label>
                    <input type="date"
                           class="form-control"
                           asp-for="@Model.Filtro!.FechadePago" />
                </div>
            </div>

            <div class="containers_em">

                <table class="tb_data">

                    <thead>
                        <tr>
                            <th>Reserva</th>
                            <th>Monto</th>
                            <th>Fecha</th>
                            <th>Método</th>
                            <th class="cl_actions">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @* 
                       Se recorre Model.Lista de forma segura:
                       - Si Model.Lista NO es null, se usa esa lista.
                       - Si Model.Lista es null, se usa Enumerable.Empty<Entidad>(), 
                         que devuelve una lista vacía del tipo indicado.
                       Así evitamos errores por null (NullReferenceException) 
                       y el foreach siempre tiene algo que iterar, aunque sea una colección vacía.
                    *@
                        @foreach (var elemento in Model.Lista ?? Enumerable.Empty<lib_dominio.Entidades.Pagos>())
                        {
                            <tr>

                                <td>@elemento.Reserva</td>
                                <td>@elemento.Monto</td>
                                <td>@elemento.FechadePago.ToShortDateString()</td>
                                <td>@elemento.Metodo</td>

                                <td>

                                    <input type="submit"
                                           value="Modificar"
                                           class="btn btn-light btn-sm"
                                           asp-page-handler="BtModificar"
                                           asp-route-data="@elemento.Id" />

                                    <input type="submit"
                                           value="Borrar"
                                           class="btn btn-danger btn-sm ms-1"
                                           asp-page-handler="BtBorrarVal"
                                           asp-route-data="@elemento.Id" />

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>
        }

    </form>

</div>
