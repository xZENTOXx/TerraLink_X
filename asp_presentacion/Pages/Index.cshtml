@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

@if (!Model.EstaLogueado)
{
    <div class="login-container">

        <h3 class="text-center">Login</h3>

        <form method="POST">

            <div class="form-group">
                <label>Usuario:</label>
                <input asp-for="@Model.Email" class="form-control" />
            </div>

            <div class="form-group mt-3">
                <label>Contraseña:</label>
                <input type="password" asp-for="@Model.Contrasena" class="form-control" />
            </div>

            <div class="mt-4 text-center">
                <input type="submit" value="Limpiar" asp-page-handler="BtClean" class="btn btn-secondary me-2" />
                <input type="submit" value="Entrar" asp-page-handler="BtEnter" class="btn btn-primary" />
            </div>

        </form>
    </div>
}
else
{
    <div class="container mt-4">
        <h2 class="mb-4">Panel Principal</h2>

        <div class="row g-4">

            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <h5 class="card-title">Total Fincas</h5>
                    <p class="card-text text-muted">Módulo para administrar fincas</p>
                    <a asp-page="/Ventanas/Fincas" class="btn btn-primary btn-sm">Ir</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <h5 class="card-title">Reservas Activas</h5>
                    <p class="card-text text-muted">Control de reservas y servicios</p>
                    <a asp-page="/Ventanas/Reservas" class="btn btn-primary btn-sm">Ir</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <h5 class="card-title">Tareas en Progreso</h5>
                    <p class="card-text text-muted">Gestión de tareas del personal</p>
                    <a asp-page="/Ventanas/Tareas" class="btn btn-primary btn-sm">Ir</a>
                </div>
            </div>

        </div>
    </div>

}
