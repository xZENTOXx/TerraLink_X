@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

@if (!Model.EstaLogueado)
{
    <div class="login-wrapper">

        <div class="login-card">

            <h2 class="login-title">Bienvenido a TerraLink</h2>
            <p class="login-subtitle">Gestión de reservas de fincas</p>

            <form method="POST" class="mt-4">

                <div class="form-group mb-3">
                    <label class="form-label">Usuario</label>
                    <input asp-for="@Model.Email" class="form-control login-input" />
                </div>

                <div class="form-group mb-4">
                    <label class="form-label">Contraseña</label>
                    <input type="password" asp-for="@Model.Contrasena" class="form-control login-input" />
                </div>

                <div class="text-center">
                    <input type="submit" value="Limpiar" asp-page-handler="BtClean" class="btn btn-secondary login-btn me-2" />
                    <input type="submit" value="Entrar" asp-page-handler="BtEnter" class="btn btn-primary login-btn" />
                </div>

            </form>
        </div>
    </div>
}
else
{
    <!-- Panel Principal -->
    <div class="container mt-4">
        <h2 class="mb-4">Panel Principal</h2>

        <div class="row g-4">

            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <h5 class="card-title">Total Fincas</h5>
                    <p class="card-text text-muted">Módulo para administrar fincas</p>
                    <a asp-page="/Ventanas/Fincas" class="btn btn-primary btn-sm">Ir</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <h5 class="card-title">Reservas Activas</h5>
                    <p class="card-text text-muted">Control de reservas y servicios</p>
                    <a asp-page="/Ventanas/Reservas" class="btn btn-primary btn-sm">Ir</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <h5 class="card-title">Tareas en Progreso</h5>
                    <p class="card-text text-muted">Gestión de tareas del personal</p>
                    <a asp-page="/Ventanas/Tareas" class="btn btn-primary btn-sm">Ir</a>
                </div>
            </div>

        </div>
    </div>
}
